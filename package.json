{
  "name": "vitrine-express",
  "version": "1.0.0",
  "description": "Build system for vitrine-express Website",
  "main": "script.js",
  "scripts": {
    "watch:css": "npx tailwindcss -i style.css -o ./dist/style.css --watch",
    "watch:script-js": "npx terser script.js -o dist/script.min.js --compress --mangle --watch",
    "watch:config-js": "npx terser config.js -o dist/config.min.js --compress --mangle --watch",
    "watch": "npm-run-all --parallel watch:css watch:script-js watch:config-js",

    "minify:tailwind": "postcss style.css -o dist/style.css",
    "minify:custom-css": "cross-env NODE_ENV=production postcss style.css -o dist/style.min.css",

    "build:script-js": "npx terser script.js -o dist/script.min.js --compress --mangle",
    "build:config-js": "npx terser config.js -o dist/config.min.js --compress --mangle",
    "build": "npm run minify:tailwind && npm run build:script-js && npm run build:config-js"
  },
  "keywords": [
    "tailwind",
    "vitrine-express",
    "postcss",
    "terser"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "adm-zip": "^0.5.10"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.4",
    "terser": "^5.31.1"
  }
}